{
  "name": "ccusage-electron-monitor",
  "version": "1.0.0",
  "description": "macOS menu bar resident monitor for Claude Code usage",
  "main": "dist/main/index.js",
  "homepage": ".",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:preload\" \"npm run electron\"",
    "dev:main": "cross-env NODE_ENV=development webpack --config build/webpack.main.config.js --watch",
    "dev:preload": "cross-env NODE_ENV=development webpack --config build/webpack.preload.config.js --watch",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config build/webpack.renderer.config.js",
    "electron": "wait-on http://localhost:3000 && electron dist/main/index.js",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cross-env NODE_ENV=production webpack --config build/webpack.main.config.js",
    "build:preload": "cross-env NODE_ENV=production webpack --config build/webpack.preload.config.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config build/webpack.renderer.config.js",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.4",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.yourcompany.ccusage-monitor",
    "productName": "CCUsage Monitor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "dmg": {
      "title": "CCUsage Monitor"
    }
  }
}
